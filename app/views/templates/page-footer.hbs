<footer>
	{{#if related}}
	<section id="related">
		<h3>Related Posts</h3>
		<nav class="linklist">
			{{#each related}}
				<li><span>{{date}}</span>
				&raquo;
				<a href="{{url}}">{{title}}/li>
			{{/each}}
		</nav>
	</section>
	{{/if}}

